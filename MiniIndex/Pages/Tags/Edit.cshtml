@page
@model MiniIndex.Pages.Tags.EditModel

@{
    ViewData["Title"] = "Edit";
}

@if (User.IsInRole("Moderator"))
{
    <h2>Edit</h2>

    <h4>Tag</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Tag.ID" />
                <div class="form-group">
                    <label asp-for="Tag.TagName" class="control-label"></label>
                    <input asp-for="Tag.TagName" class="form-control" />
                    <span asp-validation-for="Tag.TagName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tag.Category" class="control-label"></label>
                    <input asp-for="Tag.Category" class="form-control" />
                    <span asp-validation-for="Tag.Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
