@page
@model MiniIndex.Pages.Tags.DeleteModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Tag</title>
</head>
<body>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.TagName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.TagName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Category)
        </dd>
        <dt class="col-sm-2">
            Numer of Minis
        </dt>
        <dd class="col-sm-10">
            @Model.MiniCount
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Tag.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" @(Model.DisableSubmit ? "disabled" : "") /> |
        <a asp-page="/Admin/CategoryManager">Back to List</a> |
        <a href="/Minis/?Tags=@Model.Tag.TagName">View Tagged Minis</a>
    </form>
</div>
</body>
</html>
