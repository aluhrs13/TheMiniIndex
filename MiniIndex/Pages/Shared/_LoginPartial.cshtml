@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<div class="icon-no-container center">
    <a href="/Identity/Account/Manage" aria-label="Manage Account">
        <div class="icon icon-profile"></div>
    </a>
</div>
}
else
{
<div class="center">
    <a href="/Identity/Account/Register" class="btn style-primary">Register</a>
</div>
<div class ="center">
    <a href="/Identity/Account/Login?ReturnUrl=@Context.Request.Path@Context.Request.QueryString" class="btn style-primary">Login</a>
</div>
}