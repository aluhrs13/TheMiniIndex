@model MiniIndex.Minis.MiniSearchModel

<div>
    @using (Html.BeginForm(FormMethod.Get))
    {
        @Html.HiddenFor(x => x.Tags, new { id = "tagsValue" })

        @Html.LabelFor(x => x.SearchString, "Find Minis")
        @Html.TextBoxFor(x => x.SearchString, new { placeholder = "Search for..." })

        <br/>

        <div id="advanced-search">
            @Html.LabelFor(x => x.Tags, "Filter by tags")
            <input id="tagsInput" type="text" placeholder="Find tags..." />

            @Html.CheckBoxFor(x => x.FreeOnly,
                new
                {
                    @class = "form-check-input"
                })
            @Html.LabelFor(x => x.FreeOnly, "Free Minis Only",
                new
                {
                    @class = "form-check-label"
                })
            <br/>

            <hr />
            <h3>Common Tags</h3>
            <div class="row">
                <div class="cluster">
                    <h4>Genres</h4>
                    <a id="Fantasy" class="add-tagify btn btn-secondary" href="#">
                        Fantasy
                    </a>
                    <a id="Scifi" class="add-tagify btn btn-secondary" href="#">
                        Scifi
                    </a>
                    <a id="Historical" class="add-tagify btn btn-secondary" href="#">
                        Historical
                    </a>
                </div>
                <div class="cluster">
                    <h4>Uses</h4>
                    <a id="Mini" class="add-tagify btn btn-secondary" href="#">Mini</a>
                    <a id="Scatter" class="add-tagify btn btn-secondary" href="#">
                        Scatter
                    </a>
                    <a id="Tile" class="add-tagify btn btn-secondary" href="#">
                        Tile
                    </a>
                    <a id="Accessory" class="add-tagify btn btn-secondary" href="#">
                        Accessory
                    </a>
                    <br />
                </div>
            </div>
            <a href="/Tags/Browse/">Browse all tags</a>
            <hr />
        </div>

        <input type="submit" value="Search" class="btn btn-primary btn-block" />
    }
</div>