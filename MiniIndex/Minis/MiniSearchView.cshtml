@model MiniIndex.Minis.MiniSearchModel

<div class="container">

    <div class="col form">
        @using (Html.BeginForm(FormMethod.Get))
        {
            <div class="row">
                @Html.LabelFor(x => x.SearchString, "Search")
                @Html.TextBoxFor(x => x.SearchString, new { @class = "form-control", placeholder = "Search for..." })
            </div>

            <div class="row form-group">
                @Html.LabelFor(x => x.Tags, "Tags")
                @Html.TextAreaFor(x => x.Tags, new { @class = "form-control", placeholder = "Find tags..." })
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        }
    </div>
</div>